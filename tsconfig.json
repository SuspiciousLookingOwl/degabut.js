{
	"compilerOptions": {
		"target": "ESNext",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "CommonJS",
		"rootDir": "./src",
		"moduleResolution": "node",
		"paths": {
			"@modules/queue": ["./src/modules/queue"],
			"@modules/lyric": ["./src/modules/lyric"],
			"@modules/youtube": ["./src/modules/youtube"],
			"@core": ["./src/core"],
			"@apps/api": ["./src/apps/api"],
			"@apps/discord": ["./src/apps/discord"],
			"@utils": ["./src/utils"]
		},
		"outDir": "./dist",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": false
	},
	"include": ["./src"],
	"exclude": ["**/*.spec.ts"]
}
